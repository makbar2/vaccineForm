<h2>Patient Details</h2>
<div>
    <label for="firstName">First Name:</label>
    <input type="text" name="firstName" id="firstName" required  @bind="patient.FirstName"/>
</div>
<div>
    <label for="surname">Surname:</label>
    <input type="text" name="surname" id="surname" required @bind="patient.Surname"/>
</div>
<div>
    <label for="dob">Date of Birth:</label>
    <input type="date" name="dob" id="dob" required @bind="patient.Dob" />
</div>
<div>
    <label for="address">Address:</label>
    <input type="text" name="address" id="address" required @bind="patient.Address" />
</div>
<div>
    <label for="GPaddress">GP Name and Address:</label>
    <input type="text" name="GPaddress" id="GPaddress" required @bind="patient.GPAddress" />
</div>
<div>
    <label for="mobile">Mobile Number:</label>
    <input type="tel" name="mobile" id="mobile" required @bind="patient.PhoneNumber" />
</div>
<div>
    <label for="emailAddress">Email:</label>
    <input type="email" name="emailAddress" id="emailAddress" required  @bind="patient.Email" />
</div>

@code{
    [Parameter]
    public Patient patient {get;set;}
}


