    private Patient patient;
    private PatientMedicalHistory medicalHistory;
    private int PageNum;
    protected override void OnInitialized()
    {
        patient = new Patient();
        medicalHistory = new PatientMedicalHistory();
        patient.SetMedicalHistory(medicalHistory);
        PageNum = 1;
    }
    

