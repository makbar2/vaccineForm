@using blazorVaccine.Models
<h2>Patient Details</h2>
<div>
    <label for="firstName">First Name:</label>
    <input type="text" name="firstName" id="firstName"  @bind="patient.FirstName"/>
</div>
<div>
    <label for="surname">Surname:</label>
    <input type="text" name="surname" id="surname"  @bind="patient.Surname"/>
</div>
<div>
    <label for="dob">Date of Birth:</label>
    <input type="date" name="dob" id="dob"  @bind="patient.Dob" />
</div>
<div>
    <label for="address">Address:</label>
    <input type="text" name="address" id="address"  @bind="patient.Address" />
</div>
<div>
    <label for="GPaddress">GP Name and Address:</label>
    <input type="text" name="GPaddress" id="GPaddress"  @bind="patient.GPAddress" />
</div>
<div>
    <label for="mobile">Mobile Number:</label>
    <input type="tel" name="mobile" id="mobile"  @bind="patient.PhoneNumber" />
</div>
<div>
    <label for="emailAddress">Email:</label>
    <input type="email" name="emailAddress" id="emailAddress"   @bind="patient.Email"  placeholder="name@domain.com"/>
</div>

@code{
    [Parameter]
    public Patient patient {get;set;}

}


